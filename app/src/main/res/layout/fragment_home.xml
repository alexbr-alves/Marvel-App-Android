<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_marvel"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/text_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marvel"
        android:text="@string/title_fragment_characters"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_character1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_spider_man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_character" />

    <ImageView
        android:id="@+id/image_character2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_black_widow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_character" />

    <ImageView
        android:id="@+id/image_character3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_iron_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_character" />

    <ImageView
        android:id="@+id/image_character4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_thor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_character1" />

    <ImageView
        android:id="@+id/image_character5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_black_panther"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_character2" />

    <TextView
        android:id="@+id/text_character_more"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/marvel"
        android:background="@drawable/background_gradient"
        android:text="@string/see_more"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/image_character5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_character5" />

    <TextView
        android:id="@+id/text_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/marvel"
        android:text="@string/title_fragment_comic"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_character4"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_comic1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_comic1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_comic" />

    <ImageView
        android:id="@+id/image_comic2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:src="@drawable/img_comic2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_comic" />

    <ImageView
        android:id="@+id/image_comic_more"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_add_box_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_comic" />

    <TextView
        android:id="@+id/text_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/marvel"
        android:text="@string/title_fragment_event"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_comic1"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/image_event1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_event" />

    <ImageView
        android:id="@+id/image_event2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_event2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_event" />

    <ImageView
        android:id="@+id/image_event_more"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_add_box_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_event" />


</androidx.constraintlayout.widget.ConstraintLayout>


