<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="@color/red_marvel">

    <TextView
        android:id="@+id/menu_character"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:text="@string/title_fragment_characters"
        android:textColor="@color/black"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/menu_comic"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="@string/title_fragment_comic"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/menu_creator"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="@string/title_fragment_creator"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_comic"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/menu_event"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="@string/title_fragment_event"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_comic"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/menu_series"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="Series"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_event"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/menu_stories"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="Stories"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_event"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


